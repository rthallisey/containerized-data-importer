apiVersion: apps/v1
kind: Deployment
metadata:
  name: cdi-operator
  namespace: {{ .Namespace }}
  labels:
    cdi.kubevirt.io: ""
spec:
  replicas: 1
  selector:
    matchLabels:
      name: cdi-operator
  template:
    metadata:
      labels:
        name: cdi-operator
    spec:
      containers:
        - name: cdi-operator
          image: docker.io/kubevirt/cdi-operator:latest
          ports:
          - containerPort: 60000
            name: metrics
          imagePullPolicy: IfNotPresent
          env:
            - name: WATCH_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: OPERATOR_NAME
              value: "cdi-operator"
